import br.com.daniel.jdbc.dao.PessoaDao;
import br.com.daniel.jdbc.modelo.Pessoa;

public class AlteraPessoaLogica implements Logica {

	@Override
	public String executa(HttpServletRequest request, HttpServletResponse response) throws Exception {
		
		PessoaDao dao = new PessoaDao();
		Pessoa contato = new Pessoa();
		
		String cpf = request.getParameter("cpf");
		String nome = request.getParameter("nome");
		String email = request.getParameter("email");
		String dataNascimento = request.getParameter("dataNascimento");
		String sexo = request.getParameter("sexo");
		String estadoCivil = request.getParameter("estadoCivil");
		boolean ativo = Boolean.getBoolean(request.getParameter("ativo"));
		
		
		contato.setId(id);
		contato.setNome(nome);
		contato.setEmail(email);
		contato.setEndereco(endereco);
		contato.setDataNascimento(dataNascimento);
		
		dao.altera(contato);
		
		
		
		return "/WEB-INF/jsp/lista-contatos-scriptlet.jsp";
	}

}
